# Step 1.6 分析模式配置（生产基线）
# 基于微调结果的最优参数组合

# 基础配置
CVD_Z_MODE=delta
HALF_LIFE_TRADES=300
WINSOR_LIMIT=8.0
STALE_THRESHOLD_MS=5000
FREEZE_MIN=80

# 混合尺度地板配置
SCALE_MODE=hybrid
EWMA_FAST_HL=80
SCALE_FAST_WEIGHT=0.35
SCALE_SLOW_WEIGHT=0.65
MAD_WINDOW_TRADES=300
MAD_SCALE_FACTOR=1.4826
MAD_MULTIPLIER=1.45

# 分析模式水位线
WATERMARK_MS=2000

# 空窗后冻结配置（显式声明）
POST_STALE_FREEZE=2          # >5s 空窗后首2笔不产Z
HARD_FREEZE_MS=5000          # 硬冻结阈值（>5s）
SOFT_FREEZE_MS=4000          # 软冻结阈值（4-5s，首1笔不产Z）

# 队列策略（分析模式：阻塞不丢）
DROP_OLD=false               # 分析模式一律阻塞不丢，确保数据完整性

# 日志和性能配置
PRINT_EVERY=1000             # 每1000条打印一次（减少日志开销）

# 权重检查（和为1.0，自动归一化）
# SCALE_FAST_WEIGHT + SCALE_SLOW_WEIGHT = 1.0 ✓
