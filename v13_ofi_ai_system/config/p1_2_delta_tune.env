# P1.2 Delta-Z微调配置
# 目标：P(|Z|>3) ≤ 2%，保持其他指标不退化

# 核心模式
CVD_Z_MODE=delta

# 微调参数
HALF_LIFE_TRADES=200      # 从300降至200，加快尺度适应
WINSOR_LIMIT=6.0          # 从8.0降至6.0，温和收尾
STALE_THRESHOLD_MS=3000   # 从5000降至3000，缩短冻结区
FREEZE_MIN=60             # 从50升至60，更稳健的暖启动

# 水位线配置（保持P0-B设置）
WATERMARK_MS=2000

# 其他配置
LOG_LEVEL=INFO
DATA_OUTPUT_DIR=../data
