# Step 1.1: 回稳 + 轻量提地板 + 温和降快权重
# 目标：P(|Z|>3) ≤ 2%, P(|Z|>2) ≤ 8%

# 基础不变
CVD_Z_MODE=delta
WINSOR_LIMIT=8.0
STALE_THRESHOLD_MS=5000

# 回稳 + 轻量调整
HALF_LIFE_TRADES=300        # 回到更稳的 300
FREEZE_MIN=80               # 暖启动更稳

# 混合尺度地板：抬高"地板"、加重慢EWMA
SCALE_MODE=hybrid
EWMA_FAST_HL=80
SCALE_FAST_WEIGHT=0.25      # fast:slow = 0.25 : 0.75
SCALE_SLOW_WEIGHT=0.75
MAD_WINDOW_TRADES=300
MAD_SCALE_FACTOR=1.4826
MAD_MULTIPLIER=1.40         # ↑ 抬高地板（从1.30提升到1.40）

# 空窗后冻结（保持现有逻辑）
POST_STALE_FREEZE=2
